{
  "name": "homeassistant-lsp",
  "version": "0.1.9",
  "description": "Language Server Protocol server for Home Assistant - provides auto-completion and hover info for any LSP-compatible editor",
  "main": "dist/server.js",
  "bin": {
    "homeassistant-lsp": "dist/server.js"
  },
  "scripts": {
    "build": "node node_modules/typescript/bin/tsc",
    "watch": "node node_modules/typescript/bin/tsc --watch",
    "dev": "node node_modules/typescript/bin/tsc --watch",
    "start": "node dist/server.js",
    "test": "node node_modules/jest/bin/jest.js",
    "test:watch": "node node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node node_modules/jest/bin/jest.js --coverage",
    "lint": "node node_modules/eslint/bin/eslint.js src/**/*.ts",
    "lint:fix": "node node_modules/eslint/bin/eslint.js src/**/*.ts --fix",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "homeassistant",
    "lsp",
    "language-server",
    "languageserver",
    "neovim",
    "vscode",
    "autocomplete",
    "completion",
    "hover"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.9",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.5",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
